#: import colors kivymd.color_definitions.colors


# =============================================================================
#                          HISTORY TASKS SCREEN
# =============================================================================
<TareaCard>
    text: ""
    secondary_text: ""
    _no_ripple_effect: True


<AllTasks>:
    name: "all_tasks_screen"
    selection_all_list: selection_all_list

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            id: toolbar
            title: "All Tasks"
            left_action_items: [["arrow-left", lambda x: root.arrow_back_callback()]]
            # right_action_items: [["magnify"], ["dots-vertical", lambda x: print("future button")]]
            right_action_items: [["magnify"], ["dots-vertical"]]
            md_bg_color: 0, 0, 0, 1

        MDBoxLayout:
            padding: "24dp", "8dp", 0, "8dp"
            adaptive_size: True

            MDLabel:
                text: "Today"
                adaptive_size: True

        ScrollView:

            ListHistoryAll:
                id: selection_all_list
                spacing: "12dp"